# Pixels Dice deploy configuration
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# -- deploy-direct.sh (direct SCP to NAS filesystem) --
HA_HOST="nas.local"
HA_USER="youruser"
HA_CONFIG_PATH="/volume1/docker/homeassistant/custom_components"
DOCKER_PATH="/usr/local/bin/docker"
DOCKER_CONTAINER="home_assistant"

# -- deploy.sh (NAS intermediary -> HA appliance) --
NAS_HOST="nas.local"
NAS_USER="youruser"
NAS_TEMP_PATH="/tmp/pixels_dice"
HA_APPLIANCE_HOST="homeassistant.local"
HA_APPLIANCE_USER="youruser"
HA_APPLIANCE_CONFIG_PATH="/config/custom_components"
